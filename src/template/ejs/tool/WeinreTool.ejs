<!--
动态插入到页面的远端调式工具(weinre)的JS代码。
-->
<% if(Object.prototype.toString.call( weinreTool ) === '[object Object]' && weinreTool.isEnable === true){ %>
    <%
        const id = Object.prototype.toString.call( weinreTool.id ) === '[object String]' && weinreTool.id.trim().length > 0 && weinreTool.id.trim()
                .startsWith( '#' )
                   ? weinreTool.id.trim()
                   : '',
                custom = Object.prototype.toString.call( weinreTool.custom ) === '[object String]' && weinreTool.custom.trim().length > 0 && ( weinreTool.custom.trim()
                .startsWith( 'http' ) || weinreTool.custom.trim().startsWith( '//' ) ) && weinreTool.custom.trim()
                .endsWith( '/' )
                         ? weinreTool.custom.trim()
                         : '';
    %>

    <script>
      var weinreTool = document.createElement( 'script' ),
        locationHostName = location.hostname;

      weinreTool.setAttribute( 'defer', 'defer' );

      if( '<%= custom %>' ){
        weinreTool.src = '<%= custom %>' + 'target/target-script-min.js' + '<%= id %>';
      }
      else{
        weinreTool.src = 'http://' + locationHostName + ':' + '<%= weinreTool.weinreLocalPort %>' + '/target/target-script-min.js' + '<%= id %>';
      }

      document.body.appendChild( weinreTool );
    </script>
<% } %>
